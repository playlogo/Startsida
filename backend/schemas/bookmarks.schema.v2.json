{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
        "entries": {
            "type": "array",
            "description": "The gernal entries group",
            "items": {
                "oneOf": [
                    {
                        "$anchor": "bookmarkUrl",
                        "type": "string",
                        "pattern": "^[^|]+\\|[^|]+$",
                        "description": "Name and URL separated using a '|'. Example: Name|URL"
                    },
                    {
                        "$anchor": "bookmarkSpecific",
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name for bookmark"
                            },
                            "url": {
                                "type": "string",
                                "description": "Target URL of the bookmark"
                            },
                            "icon": {
                                "type": "string",
                                "description": "Icon for bookmark"
                            }
                        },
                        "required": [
                            "name",
                            "url"
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "group": {
                                "type": "string",
                                "description": "Name of the subgroup"
                            },
                            "bookmarks": {
                                "type": "array",
                                "description": "Bookmarks of this subgroup",
                                "items": {
                                    "oneOf": [
                                        {
                                            "$ref": "#bookmarkUrl"
                                        },
                                        {
                                            "$ref": "#bookmarkSpecific"
                                        }
                                    ]
                                }
                            }
                        },
                        "required": [
                            "group",
                            "bookmarks"
                        ]
                    }
                ]
            }
        }
    },
    "properties": {
        "version": {
            "type": "number",
            "description": "Config Schema version",
            "const": 2
        }
    },
    "required": [
        "version"
    ],
    "additionalProperties": true
}